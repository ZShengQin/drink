.img-recommend image{
  width: 550rpx;
  margin: 25rpx 0;
}
.btns-recommend{
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  text-decoration: underline;
  margin-bottom: 20rpx;
  font-size: 38rpx;
  color: #177BE1;
}

.coffee-saying{
  width: 85%;
  word-break: break-all;
  font-size: 35rpx;
  color: #adc6ff;
}

.bottom-container{
  width: 100%;
  height: 250rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
}
.bottom-block{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bottom-block image{
  width: 80rpx;
  height: 85rpx;
  margin-bottom: 20rpx;
}