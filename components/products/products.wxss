/* components/products/products.wxss */
.prolist{
  width: 580rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.prolist-item{
  height: 200rpx;
  display: flex;
  flex-flow: row nowrap;
  padding: 5rpx 10rpx;
}
.prolist-item-img image{
  width: 150rpx;
  height: 170rpx;
  display: inline-block;
  margin-right: 15rpx;
  border-radius: 10%;
}
.prolist-item-content{
  display: flex;
  flex-flow: column wrap;
  font-size: 30rpx;
}
.item-name{
  color: #237804;
  font-size: 35rpx;
  font-weight: bold;
}