/* components/card/card.wxss */
.card-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.card-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 15%;
  left: 13%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.card-content {
  padding: 50rpx 32rpx;
}
.card-content image{
  width: 420rpx;
}