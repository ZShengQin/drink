/* components/card/card.wxss */
.card-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.7;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.card-dialog {
  width: 600rpx;
  height: 900rpx;
  overflow: hidden;
  position: fixed;
  top: 100rpx;
  left: 75rpx;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.card-title {
  padding: 20rpx;
  font-size: 36rpx;
  color: #237804;
  text-align: center;
}

.card-image{
  width: 420rpx;
  margin-left: 90rpx;
}

.card-description{
  padding: 20rpx;
  font-size: 30rpx;
  display: inline-block;
  color: #95de64;
}